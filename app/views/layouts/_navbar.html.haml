.contain-to-grid.sticky
  %nav.top-bar{ data: {topbar: true }}
    %ul.title-area
      %li.name
        %h1
          %a.logo.show-for-small-only{ src: '/assets/greatchowlogo.jpg' }
      %li.toggle-topbar.menu-icon
        %a{ href: "#" }
          %span Menu

    %section.top-bar-section
      .logo-wrapper.hide-for-small-only
        .logo
          %img{ src: '/assets/greatchowlogo.jpg' }
      %ul.right
        %li
          %a#defaultfont{ href: "/home" }Home
        %li
          %a#defaultfont{ href: "/about" }About
        %li
          %a#defaultfont{ href: "/menu" }Menu
      %ul.left
        %li
          %a#defaultfont{ href: "/home" }Events
        %li
          %a#defaultfont{ href: "/about" }Contact
        - if current_admin
          %li.has-dropdown
            %a{ href: '#' }
              %i.fi-lock
            %ul.dropdown
              %li
                %a{ href: '/admin/edit'}Settings
              %li
                = link_to "Sign Out", destroy_user_session_path, method: :delete
              %li
                = link_to "PORTAL", portals_path
